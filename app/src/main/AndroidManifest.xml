<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--앱 알림 관련 허가권-->
    <!--네트워크 연결을 사용하여 알림을 받아올 때-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--알림 도착 시 진동을 울릴 때-->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--화면이 꺼져 있을 때도 알림을 표시할 때-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--재부팅 후에도 앱이 알림을 받을 수 있게 할때-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        android:minSdkVersion="33" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Subway"
        tools:targetApi="31">
        <activity
            android:name=".search.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".bookmark.BookmarkActivity"
            android:exported="false" />
        <activity
            android:name=".setting.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".setting.notice.NoticeActivity"
            android:exported="false" />
        <activity
            android:name=".setting.ComplaintActivity"
            android:exported="false" />
        <activity
            android:name=".setting.notice.WriteActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>