<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/route_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--최단 시간 버튼-->
        <ImageButton
            android:id="@+id/min_timeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="130dp"
            android:background="#00ff0000"
            android:src="@drawable/min_time_btn" />

        <ImageButton
            android:id="@+id/min_timeBtn_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="130dp"
            android:background="#00ff0000"
            android:src="@drawable/min_time_full_btn"
            android:visibility="gone" />

        <!--최소 환승 버튼-->
        <ImageButton
            android:id="@+id/min_transferBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="130dp"
            android:background="#00ff0000"
            android:src="@drawable/min_transfer_btn" />

        <ImageButton
            android:id="@+id/min_transferBtn_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="130dp"
            android:background="#00ff0000"
            android:src="@drawable/min_transfer_full_btn"
            android:visibility="gone" />

        <!--최소 금액 버튼-->
        <ImageButton
            android:id="@+id/min_costBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/min_fee_btn"
            android:background="#00ff0000"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="285dp"/>
        <ImageButton
            android:id="@+id/min_costBtn_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/min_fee_full_btn"
            android:background="#00ff0000"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="285dp"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#283563"
        tools:ignore="MissingConstraints"
        android:clickable="true">

        <!--소요 시간-->
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 분"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp" />

        <!--상단바 알림 버튼-->
        <ImageButton
            android:id="@+id/bellBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bell_empty"
            android:background="#00ff0000"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="20dp"
            android:clickable="true"/>
                <ImageButton
                    android:id="@+id/bellBtn_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bell_full"
                    android:background="#00ff0000"
                    android:layout_marginLeft="326dp"
                    android:layout_marginTop="18dp"
                    android:visibility="gone"/>

        <!--즐겨찾기 버튼-->
        <ImageButton
            android:id="@+id/bookmarkstarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bookmark_star"
            android:background="#00ff0000"
            android:layout_marginLeft="370dp"
            android:layout_marginTop="18dp"/>
        <ImageButton
            android:id="@+id/bookmarkstarBtn_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bookmark_star_full"
            android:background="#00ff0000"
            android:layout_marginLeft="370dp"
            android:layout_marginTop="18dp"
            android:visibility="gone"/>

        <!--환승 횟수-->
        <TextView
            android:id="@+id/transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환승 0번"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="#FFFFFF"
            android:textSize="23dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="65dp" />

        <!--비용 안내-->
        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0원"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="#FFFFFF"
            android:textSize="23dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="65dp" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>